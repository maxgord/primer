<Page x:Class="primer.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:primer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Button x:Name="BtnToNReg" Content="Вход для незарегестрированных" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Height="23" Width="200" Click="BtnToNReg_Click"/>
        <Button x:Name="BtnToReg" Content="Вход для зарегстрированных" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Width="178" Height="26" Click="BtnToReg_Click"/>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Margin="0,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="26"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" Width="200" Height="26"/>

    </Grid>
</Page>
